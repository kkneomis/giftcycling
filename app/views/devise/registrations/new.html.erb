

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
<script>   
  <%= extend_gritter :position => :top_left %>
  <%= add_gritter(  devise_error_messages!, :title => "Attention!", :image => :notice) %>
</script>
<div class="container">

<div class="row" style="margin-top:20px">
    <div class="col-xs-12 col-sm-8 col-md-6 col-sm-offset-2 col-md-offset-3">
		<form role="form">
			<fieldset>
				<h2>Sign Up for GiftCycling</h2>
				<hr class="colorgraph">
				<div class="form-group">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true , class:"form-control input-lg", placeholder:"Email Address"%>
                   
				</div>
				<div class="form-group">
          <%= f.label :password %><br />
          <% if @validatable %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %><br />
            <%= f.password_field :password, autocomplete: "off" , class:"form-control input-lg", placeholder:"Password"%>
               
				</div>
<div class="form-group">
         <%= f.label :password_confirmation %><br />
            <%= f.password_field :password_confirmation,  autocomplete: "off" , class:"form-control input-lg", placeholder:"Re-enter your password"%>
               
				</div>
				<hr class="colorgraph">
				<div class="row">
          <div class="col-xs-6 col-sm-6 col-md-6">
            <%= f.submit "Register", class: "btn btn-lg btn-success btn-block" %>
					</div>
          
            <%= link_to "Already registered?" ,  new_user_session_path, class: "btn btn-link "%>
					
					
				</div>
			</fieldset>
		</form>
	</div>
</div>

</div>
<% end %>

