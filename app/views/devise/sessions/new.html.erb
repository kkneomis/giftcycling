
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

<div class="container">

<div class="row" style="margin-top:20px">
    <div class="col-xs-12 col-sm-8 col-md-6 col-sm-offset-2 col-md-offset-3">
		<form role="form">
			<fieldset>
				<h2>Please Sign In</h2>
				<hr class="colorgraph">
				<div class="form-group">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true , class:"form-control input-lg", placeholder:"Email Address"%>
                   
				</div>
				<div class="form-group">
          <%= f.label :password %><br />
            <%= f.password_field :password, autocomplete: "off" , class:"form-control input-lg", placeholder:"Password"%>
               
				</div>
				<span class="button-checkbox">
          <p> <%= f.check_box :remember_me %>  <%= f.label :remember_me %> </p>
					<a>      <%= link_to "Forgot your password?", new_password_path(resource_name) %></a>
          
				</span>
				<hr class="colorgraph">
				<div class="row">
					<div class="col-xs-6 col-sm-6 col-md-6">
            <%= f.submit "Sign in" , class: "btn btn-lg btn-success btn-block"%>
					</div>
					<div class="col-xs-6 col-sm-6 col-md-6">
            <%= link_to "Register", new_user_registration_path, class: "btn btn-lg btn-primary btn-block" %>
					</div>
				</div>
			</fieldset>
		</form>
	</div>
</div>

</div>
<% end %>


 

