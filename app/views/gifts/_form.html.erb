<%= form_for(@gift) do |f| %>
  <% if @gift.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@gift.errors.count, "error") %> prohibited this gift from being saved:</h2>

      <ul>
      <% @gift.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>


<div class="container">

<div class="row" style="margin-top:20px">
    <div class="col-xs-12 col-sm-8 col-md-6 col-sm-offset-2 col-md-offset-3">
		<form role="form">
			<fieldset>
				<h2>Post a gift</h2>
				<hr class="colorgraph">
				<div class="form-group">
          <%= f.label :name %><br />
          <%= f.text_field :name, autofocus: true , class:"form-control input-lg", placeholder:"Gift Name"%>
                   
				</div>
				<div class="form-group">
          <%= f.label :description %><br />
          <%= f.text_area :description, autocomplete: "off" , class:"form-control input-lg", placeholder:"Description"%>
               
				</div>
				<div class="form-group">
          <%= f.label :location %><br />
          <%= f.text_field :location, autocomplete: "off" , class:"form-control input-lg", placeholder:"Location"%>
               
				</div>
        <div class="form-group">
          <%= f.label :image %><br />
          <%= f.file_field :image, class:"form-control input-lg"%>
               
				</div>
				<hr class="colorgraph">
				<div class="row">
					<div class="col-xs-6 col-sm-6 col-md-6">
            <%= f.submit "Post this gift" , class: "btn btn-lg btn-success btn-block"%>
					</div>
           <div class="col-xs-6 col-sm-6 col-md-6">
               <%= link_to 'Go Back', gifts_path , class: "btn btn-lg btn-primary btn-block"%>
					</div>            
				</div>
			</fieldset>
		</form>
	</div>
</div>
</div>
<% end %>
